CONFIG_ARM=y
CONFIG_BOARD_REDBEAR_DUO=y
CONFIG_SOC_SERIES_STM32F2X=y
CONFIG_SOC_STM32F205XX=y
# 120MHz system clock
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=120000000
CONFIG_SYS_CLOCK_TICKS_PER_SEC=1000

# Enable MPU
CONFIG_STM32_ARM_MPU_ENABLE=y

# enable USART1 - passthrough to STLINK v2 connector
CONFIG_UART_STM32_PORT_1=y
# enable console on this port by default
CONFIG_UART_CONSOLE_ON_DEV_NAME="UART_1"

# enable pinmux
CONFIG_PINMUX=y

# enable GPIO ports A, B, C
CONFIG_GPIO=y
# CONFIG_GPIO_STM32=y
# CONFIG_GPIO_STM32_PORTA=y
# CONFIG_GPIO_STM32_PORTB=y
# CONFIG_GPIO_STM32_PORTC=y

# clock configuration
CONFIG_CLOCK_CONTROL=y

# Clock configuration for Cube Clock control driver
CONFIG_CLOCK_STM32_HSE_CLOCK=26000000
CONFIG_CLOCK_STM32_SYSCLK_SRC_PLL=y
# use HSE as PLL input
CONFIG_CLOCK_STM32_PLL_SRC_HSE=y
# produce 120MHz clock at PLL output
CONFIG_CLOCK_STM32_PLL_M_DIVISOR=26
CONFIG_CLOCK_STM32_PLL_N_MULTIPLIER=240
CONFIG_CLOCK_STM32_PLL_P_DIVISOR=2
CONFIG_CLOCK_STM32_PLL_Q_DIVISOR=5
CONFIG_CLOCK_STM32_AHB_PRESCALER=1
CONFIG_CLOCK_STM32_APB1_PRESCALER=4
CONFIG_CLOCK_STM32_APB2_PRESCALER=2

#enable pwm
CONFIG_PWM=y
CONFIG_PWM_STM32=y
CONFIG_PWM_STM32_1=y
CONFIG_PWM_STM32_2=y

#enable I2C
CONFIG_I2C=y
CONFIG_I2C_STM32_V2=y
